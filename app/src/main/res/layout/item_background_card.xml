<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        style="@style/CardViewTheme"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/background_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/background_card_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <!-- Character background -->
            <ImageView
                tools:ignore="ContentDescription"
                android:id="@+id/background_icon"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <!-- Background name -->
            <TextView
                android:id="@+id/background_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_marginTop="24dp"
                android:textColor="@android:color/black" />

            <!-- Background description -->
            <TextView
                android:id="@+id/background_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:textSize="16sp"
                android:layout_toStartOf="@id/background_icon"
                android:layout_below="@id/background_name"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/darker_gray" />

            <!-- Additional background details -->
            <TextView
                android:id="@+id/background_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="16sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_below="@id/background_description" />

            <!-- Select background button -->
            <Button
                android:id="@+id/btn_select_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                android:textSize="16sp"
                android:layout_below="@id/background_details"
                android:text="@string/btn_select_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/btn_select_background">

                <!-- Expand icon for additional background details -->
                <ImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/background_details_expand_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="0.1"
                    app:srcCompat="@drawable/ic_expand_more"
                    android:contentDescription="@string/expand_icon_accessibility" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>